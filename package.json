   "devDependencies": {
      "@eslint/js": "~9.36",
      "@types/node": "~24.5",
      "assert-deep-strict-equal": "~1.2",
      "eslint": "~9.36",
      "jshint": "~2.13",
      "mocha": "~11.7",
      "rimraf": "~6.0",
      "typescript": "~5.9",
      "typescript-eslint": "~8.44"
