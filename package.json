{
   "name": "crest",
   "version": "0.0.1",
   "description": "Canonical REST",
   "license": "MIT",
   "type": "module",
   "repository": {
      "type": "git",
      "url": "git+https://github.com/center-key/crest.git"
   },
   "homepage": "https://github.com/center-key/crest",
   "bugs": "https://github.com/center-key/crest/issues",
   "docs": "https://centerkey.com/clabe",
   "author": "Center Key (https://centerkey.com)",
   "keywords": [
      "api",
      "rest"
   ],
   "jshintConfig": {
      "esversion": 11,
      "strict": "implied",
      "eqeqeq": true,
      "undef": true,
      "unused": true,
